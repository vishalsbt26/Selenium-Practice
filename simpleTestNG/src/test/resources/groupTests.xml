<test name="regularExpression">
		<groups>
			<run>
				<include name="windows.*" />
			</run>
		</groups>
		<classes>
			<class name="com.vk.groupTest.ignoreTest1">
			</class>
		</classes>
	</test>

	<test name="allTest">
		<groups>
			<run>
				<include name="all" />
			</run>
		</groups>
		<classes>
			<class name="com.vk.groupTest.ignoreTest1">
			</class>
		</classes>
	</test>

	<test name="smokeTest">
		<groups>

			<run>
				<include name="smoke" />
			</run>

		</groups>
		<classes>
			<class name="com.vk.groupTest.ignoreTest1" />
		</classes>
	</test>

	<test name="regressionTest">
		<groups>

			<run>
				<include name="regression" />
			</run>

		</groups>
		<classes>
			<class name="com.vk.groupTest.ignoreTest1" />
		</classes>
	</test>



